<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_item_home_category_product"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            />

        <RelativeLayout
            android:id="@+id/container_item_home_category_add_star"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/bg_item_product_list"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/img_item_home_category_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_00"
                    />

                <TextView
                    android:id="@+id/tv_iem_home_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="加入试衣间"
                    android:textSize="13sp"
                    android:textColor="@color/font_black_light"
                    />

            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>